{
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "es6": true,
    "node": true
  },
  "extends": ["airbnb-base", "standard-preact", "prettier"],
  "parserOptions": {
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "plugins": ["prettier", "react", "import", "promise"],
  "rules": {
    "prettier/prettier": "error",
    "no-console": "warn",
    "react/jsx-uses-vars": [2],
    "import/no-unresolved": 0,
    "camelcase": "off",
    "class-methods-use-this": "off"
  }
}
